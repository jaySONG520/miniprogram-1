page {
  height: 100vh;
  background: #F5F1E8;
}

.study-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 60rpx 60rpx;
  box-sizing: border-box;
}

.study-header {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  margin-bottom: 40rpx;
}

.round-text {
  font-size: 30rpx;
  color: #8B9A9F;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.study-progress {
  width: 100%;
}

.progress-info {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #A8B5A0;
  text-align: right;
}

.study-card {
  flex: 1;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0 12rpx 30rpx rgba(168, 181, 160, 0.25);
  padding: 40rpx 36rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.study-word {
  font-size: 80rpx;
  font-weight: 400;
  color: #5A6B5D;
  letter-spacing: 6rpx;
  margin-bottom: 20rpx;
}

.study-phonetic {
  font-size: 30rpx;
  color: #9BA8A3;
  font-style: italic;
  margin-bottom: 30rpx;
}

.study-meaning {
  font-size: 38rpx;
  color: #6B7A6F;
  text-align: center;
  line-height: 1.8;
  margin-bottom: 40rpx;
}

.study-tip {
  font-size: 26rpx;
  color: #9BA8A3;
  margin-bottom: 30rpx;
  text-align: center;
}

.options-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-btn {
  width: 100%;
  border-radius: 999rpx;
  background: rgba(245, 241, 232, 0.9);
  color: #6B7A6F;
  font-size: 28rpx;
}

.yn-group {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 40rpx;
}

.yn-btn {
  width: 200rpx;
  border-radius: 999rpx;
  font-size: 30rpx;
}

.yn-btn.yes {
  background: #A8B5A0;
  color: #FFFFFF;
}

.yn-btn.no {
  background: rgba(255, 255, 255, 0.9);
  color: #6B7A6F;
}

.detail-word {
  font-size: 70rpx;
  font-weight: 400;
  color: #5A6B5D;
  letter-spacing: 6rpx;
  margin-bottom: 16rpx;
}

.detail-phonetic {
  font-size: 30rpx;
  color: #9BA8A3;
  font-style: italic;
  margin-bottom: 24rpx;
}

.detail-meaning {
  font-size: 34rpx;
  color: #6B7A6F;
  margin-bottom: 30rpx;
  text-align: center;
}

.detail-example {
  margin-bottom: 30rpx;
}

.detail-example-en {
  font-size: 30rpx;
  color: #5A6B5D;
  margin-bottom: 12rpx;
}

.detail-example-zh {
  font-size: 28rpx;
  color: #9BA8A3;
}

.detail-tip {
  font-size: 26rpx;
  color: #9BA8A3;
  margin-bottom: 30rpx;
  text-align: center;
}

.next-btn {
  width: 260rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #A8B5A0 0%, #8B9A9F 100%);
  color: #FFFFFF;
  font-size: 30rpx;
}


