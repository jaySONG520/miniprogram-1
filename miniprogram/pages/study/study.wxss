page {
  height: 100vh;
  /* 更细腻的莫兰迪渐变背景 */
  background: linear-gradient(180deg, #FDFCF8 0%, #F5F1E8 50%, #E8E4D9 100%);
}

.study-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 48rpx 0 72rpx;
  box-sizing: border-box;
  position: relative;
}

.study-hub {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin-top: 40rpx;
  padding: 0 60rpx;
}

.hub-card {
  border-radius: 32rpx;
  padding: 32rpx 30rpx;
  box-shadow: 0 12rpx 30rpx rgba(168, 181, 160, 0.25);
}

.new-card {
  background: linear-gradient(135deg, #F5F1E8 0%, #E8E4D9 100%);
}

.review-card {
  background: linear-gradient(135deg, #E6ECE4 0%, #D9E1DB 100%);
}

.hub-title {
  font-size: 34rpx;
  color: #5A6B5D;
  margin-bottom: 12rpx;
}

.hub-count {
  font-size: 30rpx;
  color: #6B7A6F;
  margin-bottom: 8rpx;
}

.hub-tip {
  font-size: 24rpx;
  color: #9BA8A3;
}

.study-header {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  margin-bottom: 32rpx;
}

.top-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.nav-back {
  font-size: 34rpx;
  color: #8B9A9F;
  padding-right: 24rpx;
}

.round-text {
  font-size: 28rpx;
  color: #8B9A9F;
  letter-spacing: 4rpx;
}

.progress-info {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #A8B5A0;
  text-align: right;
}

.study-card {
  display: none;
}

.study-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0 120rpx;
  box-sizing: border-box;
}

.word-block {
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.study-word {
  font-size: 80rpx;
  font-weight: 600;
  color: #3A4D40;
  letter-spacing: 4rpx;
  margin-bottom: 32rpx;
}

.study-phonetic {
  font-size: 30rpx;
  color: #9BA8A3;
  font-style: italic;
  margin-bottom: 40rpx;
}

.study-meaning {
  font-size: 38rpx;
  color: #6B7A6F;
  text-align: center;
  line-height: 1.8;
  margin-bottom: 48rpx;
}

.study-tip {
  font-size: 26rpx;
  color: #9BA8A3;
  margin-bottom: 40rpx;
  text-align: center;
}

.options-group {
  width: 100vw;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.option-btn {
  width: 100%;
  border-radius: 0;
  background: rgba(255, 255, 255, 0.4);
  color: #5A6B5D;
  font-size: 28rpx;
  border: none;
  box-shadow: none;
  border-top: 0.5px solid rgba(90, 107, 93, 0.12);
  border-bottom: 0.5px solid rgba(90, 107, 93, 0.06);
  transition: transform 0.15s ease-out, background-color 0.15s ease-out, box-shadow 0.15s ease-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.option-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(168, 181, 160, 0.2);
}

/* 预留正确/错误状态样式（如需从逻辑层加 class 可直接复用） */
.option-btn.correct {
  background-color: rgba(168, 181, 160, 0.35);
}

.option-btn.wrong {
  background-color: rgba(231, 130, 130, 0.28);
  animation: shakeOption 0.25s ease-in-out;
}

.yn-group {
  display: none;
}

.yn-btn {
  width: 200rpx;
  border-radius: 999rpx;
  font-size: 30rpx;
}

.yn-btn.yes {
  background: #A8B5A0;
  color: #FFFFFF;
}

.yn-btn.no {
  background: rgba(255, 255, 255, 0.9);
  color: #6B7A6F;
}

.detail-word {
  font-size: 70rpx;
  font-weight: 600;
  color: #3A4D40;
  letter-spacing: 6rpx;
  margin-bottom: 16rpx;
}

.detail-phonetic {
  font-size: 30rpx;
  color: #9BA8A3;
  font-style: italic;
  margin-bottom: 24rpx;
}

.detail-meaning {
  font-size: 34rpx;
  color: #6B7A6F;
  margin-bottom: 30rpx;
  text-align: center;
}

.detail-example {
  margin-bottom: 40rpx;
}

.detail-example-en {
  font-size: 30rpx;
  color: #5A6B5D;
  margin-bottom: 16rpx;
  text-align: center;
  line-height: 1.9;
}

.detail-example-zh {
  font-size: 28rpx;
  color: #9BA8A3;
  text-align: center;
  line-height: 1.9;
}

.detail-tip {
  font-size: 26rpx;
  color: #9BA8A3;
  margin-bottom: 30rpx;
  text-align: center;
}

.next-btn {
  width: 260rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #A8B5A0 0%, #8B9A9F 100%);
  color: #FFFFFF;
  font-size: 30rpx;
}

/* 全屏沉浸式详情层 */
.detail-overlay {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(253, 252, 248, 0.88), rgba(245, 241, 232, 0.9));
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  z-index: 10;
}

.detail-panel {
  width: 100%;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.35);
  box-shadow: none;
  backdrop-filter: blur(18px);
  padding: 60rpx 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bottom-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 0 constant(safe-area-inset-bottom);
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: linear-gradient(180deg, rgba(245, 241, 232, 0), rgba(245, 241, 232, 0.95));
}

.bottom-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 0;
  border: none;
  font-size: 30rpx;
}

.bottom-btn.left {
  background-color: #A8B5A0;
  color: #FFFFFF;
}

.bottom-btn.right {
  background-color: transparent;
  color: #6B7A6F;
}

/* 卡片淡入上移动画 */
.fade-slide-card {
  animation: fadeSlideIn 0.35s ease-out;
}

@keyframes fadeSlideIn {
  0% {
    opacity: 0;
    transform: translateY(24rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shakeOption {
  0% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  50% { transform: translateX(10rpx); }
  75% { transform: translateX(-6rpx); }
  100% { transform: translateX(0); }
}


