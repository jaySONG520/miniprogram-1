/**index.wxss**/
/* 莫兰迪色系变量 */
page {
  height: 100vh;
  background: linear-gradient(180deg, #F5F1E8 0%, #E8E4D9 100%);
  /* 淡米色渐变背景 */
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 80rpx 60rpx;
  box-sizing: border-box;
}

/* 顶部区域 */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.date-text {
  font-size: 28rpx;
  color: #A8B5A0;
  /* 灰豆绿 */
  font-weight: 300;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
}

.encouragement-text {
  font-size: 32rpx;
  color: #8B9A9F;
  /* 雾霾蓝 */
  font-weight: 300;
  letter-spacing: 4rpx;
}

/* 单词展示区 */
.word-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.word-main {
  font-size: 96rpx;
  font-weight: 400;
  color: #5A6B5D;
  /* 深灰豆绿 */
  letter-spacing: 8rpx;
  margin-bottom: 40rpx;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  transform: scale(1);
}

.word-main.checked {
  color: #7A9B8F;
  transform: scale(0.95);
  opacity: 0.8;
}

.word-phonetic {
  font-size: 32rpx;
  color: #9BA8A3;
  font-style: italic;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

.word-meaning {
  font-size: 36rpx;
  color: #6B7A6F;
  line-height: 1.8;
  text-align: center;
  max-width: 600rpx;
  letter-spacing: 1rpx;
}

/* 底部打卡按钮 */
.footer-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  margin-top: auto;
}

.check-button {
  width: 320rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #A8B5A0 0%, #8B9A9F 100%);
  /* 灰豆绿到雾霾蓝的渐变 */
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(139, 154, 159, 0.2);
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.check-button::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.check-button:active::before {
  width: 400rpx;
  height: 400rpx;
}

.check-button.checked {
  background: linear-gradient(135deg, #C4D4C8 0%, #B8C8C3 100%);
  /* 更浅的莫兰迪色 */
  box-shadow: 0 4rpx 12rpx rgba(196, 212, 200, 0.3);
  transform: scale(0.96);
}

.check-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 300;
  letter-spacing: 4rpx;
  position: relative;
  z-index: 1;
}

.check-button.checked .check-text {
  color: #7A9B8F;
}

/* 打卡成功动画 */
@keyframes checkSuccess {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(0.96);
  }
}

.check-button.checked {
  animation: checkSuccess 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}
