<!--index.wxml-->
<view class="page-container">
  <!-- 顶部：下拉提示、日期和鼓励语 -->
  <view class="header-section">
    <view class="pull-hint {{pullHintVisible ? 'visible' : ''}}">
      ↓ 下拉搜索单词
    </view>
    <view class="date-text">{{currentDate}}</view>
    <view 
      class="encouragement-text {{encouragementAnimating ? 'animating' : ''}}" 
      bindtap="switchEncouragement"
    >
      {{encouragement}}
    </view>

    <!-- 今日复习提醒 -->
    <view
      wx:if="{{reviewCount > 0}}"
      class="review-banner"
      bindtap="goToReview"
    >
      今日有 {{reviewCount}} 个单词待温故，去复习吧
    </view>
  </view>

  <!-- 中间：单词展示区 -->
  <view class="word-section">
    <!-- 右上角收藏星标 -->
    <view class="word-favorite-wrapper" bindtap="handleFavorite">
      <text class="favorite-icon {{isFavorite ? 'active' : ''}}">
        {{isFavorite ? '★' : '☆'}}
      </text>
    </view>

    <view class="word-main {{checked ? 'checked' : ''}}">{{wordData.word}}</view>
    <view class="word-phonetic">{{wordData.phonetic}}</view>
    <view class="word-meaning">{{wordData.meaning}}</view>
  </view>

  <!-- 底部：打卡按钮 -->
  <view class="footer-section">
    <button 
      class="check-button {{checked ? 'checked' : ''}}" 
      bindtap="handleCheck"
      disabled="{{checked}}"
    >
      <text class="check-text">{{checked ? '✓ 今日已打卡' : '已阅打卡'}}</text>
    </button>
  </view>
</view>
